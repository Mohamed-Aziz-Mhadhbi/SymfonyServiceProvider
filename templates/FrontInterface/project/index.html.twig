{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block content %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>CreatAt</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.creatAt ? project.creatAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ project.status ? 'Validated' : 'not Validated' }}</td>
                <td>
                    <a href="{{ path('project_show_front', {'id': project.id}) }}">details</a>
                    <a href="{{ path('project_edit_front', {'id': project.id}) }}">Validate</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('profile') }}">Create new Proposal</a>
{% endblock %}
